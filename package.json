    "graphql": "^14.0.2",
    "graphql-tools": "^4.0.3",
    "graphql-yoga": "^1.16.7",
    "helmet": "^3.15.0",
    "merge-graphql-schemas": "^1.5.7",
    "morgan": "^1.9.1",
    "path": "^0.12.7",
    "pg": "^7.6.1",
    "typeorm": "^0.2.8"
  }
}
